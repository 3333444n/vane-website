---
interface Props {
  quote: string;
  useLightBackground?: boolean;
  class?: string;
}

const { quote, useLightBackground = true, class: className } = Astro.props;

// NOTE: Ensure 'DM Serif Display' is configured in your tailwind.config.js
// For example, in theme.extend.fontFamily:
// fontFamily: {
//   dmSerif: ['"DM Serif Display"', 'serif'],
// }
---

<div
  class:list={[
    "text-center py-12 md:py-24 px-8 w-full intersect:motion-preset-fade motion-delay-200", // Increased top and bottom padding
    useLightBackground ? "bg-light" : "bg-light2", // Conditional background
    className, // Apply the passed class
  ]}
>
  <p
    class="font-dmSerifText italic text-xl sm:text-2xl md:text-5xl leading-relaxed text-extra m-0"
  >
    {quote}
  </p>
</div>
