---
// src/components/Footer.astro
export interface Props {
  useLightBackground?: boolean;
}
const { useLightBackground = false } = Astro.props;
---

<footer
  class:list={["py-12 px-4", useLightBackground ? "bg-light" : "bg-light2"]}
>
  <div class="max-w-screen-xl mx-auto">
    <!-- Newsletter Section -->
    <div class="mb-10 text-center">
      <h2 class="text-3xl font-semibold mb-2">Suscríbete a mi newsletter</h2>
      <p class="mb-6">
        Te enterarás de nuevos cursos, descuentos y recursos espirituales
      </p>
      <form class="max-w-xl mx-auto">
        <div class="space-y-4">
          <div>
            <input
              type="text"
              placeholder="Nombre"
              class="w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 bg-white"
            />
          </div>
          <div>
            <input
              type="text"
              placeholder="Apellido"
              class="w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 bg-white"
            />
          </div>
          <div>
            <input
              type="email"
              placeholder="Mail"
              class="w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 bg-white"
            />
          </div>
          <!-- Mock submit button, can be styled or made functional later -->
          <button type="submit" class="btn-primary w-full !p-3 mt-4">
            Suscribirme
          </button>
        </div>
      </form>
    </div>

    <!-- Links Section -->
    <div
      class="flex flex-col md:flex-row md:justify-around gap-8 md:gap-8 mb-10"
    >
      <!-- Navegación Column -->
      <div class="text-center md:text-left">
        <h3 class="text-2xl font-semibold mb-4">Navegación</h3>
        <ul class="list-none space-y-2">
          <li>
            <a href="#" class="hover:underline font-afacad text-primary"
              >Academia</a
            >
          </li>
          <li>
            <a href="#" class="hover:underline font-afacad text-primary"
              >Todos los cursos</a
            >
          </li>
          <li>
            <a href="#" class="hover:underline font-afacad text-primary"
              >Próximos eventos</a
            >
          </li>
          <li>
            <a href="#" class="hover:underline font-afacad text-primary"
              >Acerca de mí</a
            >
          </li>
          <li>
            <a href="#" class="hover:underline font-afacad text-primary"
              >Lectoras Certificadas</a
            >
          </li>
        </ul>
      </div>

      <!-- Mis otros canales Column -->
      <div class="text-center md:text-left">
        <h3 class="text-2xl font-semibold mb-4">Mis otros canales</h3>
        <ul class="list-none space-y-2">
          <li>
            <a href="#" class="hover:underline font-afacad text-primary"
              >Instagram</a
            >
          </li>
          <li>
            <a href="#" class="hover:underline font-afacad text-primary"
              >Facebook</a
            >
          </li>
          <li>
            <a href="#" class="hover:underline font-afacad text-primary"
              >Youtube</a
            >
          </li>
        </ul>
      </div>
    </div>

    <!-- Copyright Section -->
    <div class="mt-8 text-center">
      <p class="text-sm">&copy; Vanessa Ramírez, 2025, Diseñado por ArKo</p>
    </div>
  </div>
</footer>
