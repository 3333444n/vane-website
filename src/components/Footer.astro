---
// src/components/Footer.astro
export interface Props {
  useLightBackground?: boolean;
}
const { useLightBackground = false } = Astro.props;
---

<footer
  class:list={["py-12 px-4", useLightBackground ? "bg-light" : "bg-light2"]}
>
  <div class="max-w-screen-xl mx-auto">
    <!-- Newsletter Section -->
    <div class="mb-10 text-center">
      <h2 class="text-3xl font-semibold mb-2">Suscríbete a mi newsletter</h2>
      <p class="mb-6">
        Te enterarás de nuevos cursos, descuentos y recursos espirituales
      </p>
      <div id="mc_embed_shell">
        <div id="mc_embed_signup">
          <form
            action="https://vanessaramirezcoach.us1.list-manage.com/subscribe/post?u=329af73e2dd3294c80644eced&id=a793476c38&f_id=007703e5f0"
            method="post"
            id="mc-embedded-subscribe-form"
            name="mc-embedded-subscribe-form"
            class="validate max-w-xl mx-auto"
            target="_self"
            novalidate=""
          >
            <div id="mc_embed_signup_scroll" class="space-y-4">
              {
                /* The h2 from the original user-provided HTML is moved above mc_embed_shell */
              }
              <div class="indicates-required hidden">
                <span class="asterisk">*</span> indicates required
              </div>
              <div class="mc-field-group">
                <label for="mce-EMAIL" class="hidden"
                  >Email Address <span class="asterisk">*</span></label
                >
                <input
                  type="email"
                  name="EMAIL"
                  class="required email w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 bg-white"
                  id="mce-EMAIL"
                  value=""
                  required=""
                  placeholder="Correo Electrónico *"
                />
              </div>
              <div class="mc-field-group">
                <label for="mce-FNAME" class="hidden">First Name </label>
                <input
                  type="text"
                  name="FNAME"
                  class="text w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 bg-white"
                  id="mce-FNAME"
                  value=""
                  placeholder="Nombre"
                />
              </div>
              <div class="mc-field-group">
                <label for="mce-LNAME" class="hidden">Last Name </label>
                <input
                  type="text"
                  name="LNAME"
                  class="text w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 bg-white"
                  id="mce-LNAME"
                  value=""
                  placeholder="Apellido"
                />
              </div>
              <div id="mce-responses" class="clear">
                <div
                  class="response"
                  id="mce-error-response"
                  style="display: none;"
                >
                </div>
                <div
                  class="response"
                  id="mce-success-response"
                  style="display: none;"
                >
                </div>
              </div>
              <div
                style="position: absolute; left: -5000px;"
                aria-hidden="true"
              >
                <input
                  type="text"
                  name="b_329af73e2dd3294c80644eced_a793476c38"
                  tabindex="-1"
                  value=""
                />
              </div>
              <div class="clear">
                <input
                  type="submit"
                  name="subscribe"
                  id="mc-embedded-subscribe"
                  class="button btn-primary w-full !p-3 mt-4"
                  value="Suscribirme"
                />
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Links Section -->
    <div
      class="flex flex-col md:flex-row md:justify-around gap-8 md:gap-8 mb-10"
    >
      <!-- Navegación Column -->
      <div class="text-center md:text-left">
        <h3 class="text-2xl font-semibold mb-4">Navegación</h3>
        <ul class="list-none space-y-2">
          <li>
            <a
              href="https://academia.vanessaramirezcoach.com/"
              class="hover:underline font-afacad text-primary"
              target="_blank"
              rel="noopener noreferrer">Academia</a
            >
          </li>
          <li>
            <a
              href="/eventos/#certificaciones"
              class="hover:underline font-afacad text-primary"
              >Todos los cursos</a
            >
          </li>
          <li>
            <a href="/eventos/" class="hover:underline font-afacad text-primary"
              >Próximos eventos</a
            >
          </li>
          <li>
            <a
              href="/acerca-de-mi"
              class="hover:underline font-afacad text-primary">Acerca de mí</a
            >
          </li>
          <li>
            <a
              href="/lectoras-certificadas"
              class="hover:underline font-afacad text-primary"
              >Lectoras Certificadas</a
            >
          </li>
        </ul>
      </div>

      <!-- Mis otros canales Column -->
      <div class="text-center md:text-left">
        <h3 class="text-2xl font-semibold mb-4">Mis otros canales</h3>
        <ul class="list-none space-y-2">
          <li>
            <a
              href="https://www.instagram.com/vanessaramirez.coach/"
              class="hover:underline font-afacad text-primary"
              target="_blank"
              rel="noopener noreferrer">Instagram</a
            >
          </li>
          <li>
            <a
              href="https://www.facebook.com/vanessaramirezcoach"
              class="hover:underline font-afacad text-primary"
              target="_blank"
              rel="noopener noreferrer">Facebook</a
            >
          </li>
          <li>
            <a href="#" class="hover:underline font-afacad text-primary"
              >Tiktok</a
            >
          </li>
        </ul>
      </div>
    </div>

    <!-- Copyright Section -->
    <div class="mt-8 text-center">
      <p class="text-sm">&copy; Vanessa Ramírez, 2025, Diseñado por ArKo</p>
    </div>
  </div>
</footer>
