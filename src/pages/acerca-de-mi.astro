    imageUrl="/public/images/img-placeholder.jpg"
    heading="My Journey"
    content="A brief overview of my professional journey and what drives me. I am dedicated to creating impactful solutions and continuously expanding my skillset."
    useLightBackground={true}
  />
  <ImageTextSection
    imageUrl="/public/images/img-placeholder.jpg"
    heading="My Approach"
    content="I believe in a collaborative and client-focused approach. Understanding your needs is paramount to delivering results that exceed expectations."
    useLightBackground={false}
    reverseOrder={true}
  />
  <Quote
    quote="The best way to predict the future is to create it."
    useLightBackground={true}
  />
  <TestimonialSection
    testimonials={[
      {
        quote:
          "Vanessa is a true professional, delivering outstanding results every time.",
        authorName: "John Doe",
        authorTitle: "Tech Solutions Inc.",
      },
